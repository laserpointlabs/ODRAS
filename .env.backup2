# ODRAS Installation-Specific Configuration Template
# Copy this to .env in the root directory and customize for your installation

# =============================================================================
# INSTALLATION-SPECIFIC IRI CONFIGURATION
# =============================================================================

# Installation Identity (customize for your installation)
INSTALLATION_NAME=XMA-ADT
INSTALLATION_TYPE=usnc
TOP_LEVEL_DOMAIN=mil
INSTALLATION_BASE_URI=https://xma-adt.usnc.mil
INSTALLATION_ORGANIZATION=U.S. Navy XMA-ADT
INSTALLATION_PROGRAM_OFFICE=Naval Air Systems Command
AUTHORITY_CONTACT=admin@xma-adt.usnc.mil

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=odras
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
STORAGE_BACKEND=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=odras-files
MINIO_SECURE=false

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-api-key-here

# LLM_PROVIDER=ollama
# LLM_MODEL=llama3.1:8b
# #LLM_MODEL=llama3.2:8b
# #LLM_MODEL=deepseek-r1:14b
# #LLM_MODEL=mistral
# OLLAMA_URL=http://localhost:11434

# =============================================================================
# SERVICE URLS
# =============================================================================
QDRANT_URL=http://localhost:6333
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=testpassword
FUSEKI_URL=http://localhost:3030/odras
CAMUNDA_BASE_URL=http://localhost:8080
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
ENVIRONMENT=development
LOG_LEVEL=INFO


# OpenSearch/Elasticsearch Configuration (for hybrid search)
# OpenSearch provides full-text/keyword search to complement Qdrant vector search
# Enable hybrid search by setting RAG_HYBRID_SEARCH=true and OPENSEARCH_ENABLED=true
OPENSEARCH_ENABLED=true
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# RAG Hybrid Search Configuration
# Hybrid search combines vector similarity (Qdrant) + keyword search (OpenSearch)
# for improved retrieval of technical content, model numbers, IDs, and exact terms
RAG_HYBRID_SEARCH=true
RAG_RERANKER=rrf
# Reranker options: rrf (Reciprocal Rank Fusion), cross_encoder, hybrid, none
# - rrf: Fast, effective for combining multiple search sources (default)
# - cross_encoder: More accurate but slower (requires sentence-transformers)
# - hybrid: Combines RRF + cross-encoder for best results
# - none: No reranking (uses original scores)

# =============================================================================
# OPENSEARCH/ELASTICSEARCH CONFIGURATION (for hybrid search)
# =============================================================================
# OpenSearch provides full-text/keyword search to complement Qdrant vector search
# Enable hybrid search by setting RAG_HYBRID_SEARCH=true and OPENSEARCH_ENABLED=true
#
# NOTE: With DISABLE_SECURITY_PLUGIN=true in docker-compose.yml, no username/password needed
# If security is enabled, default username is "admin" and password is set via OPENSEARCH_INITIAL_ADMIN_PASSWORD
OPENSEARCH_ENABLED=false
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=
OPENSEARCH_PASSWORD=

# =============================================================================
# RAG HYBRID SEARCH CONFIGURATION
# =============================================================================
# Hybrid search combines vector similarity (Qdrant) + keyword search (OpenSearch)
# for improved retrieval of technical content, model numbers, IDs, and exact terms
RAG_HYBRID_SEARCH=false
RAG_RERANKER=rrf
# Reranker options: rrf (Reciprocal Rank Fusion), cross_encoder, hybrid, none
# - rrf: Fast, effective for combining multiple search sources (default)
# - cross_encoder: More accurate but slower (requires sentence-transformers)
# - hybrid: Combines RRF + cross-encoder for best results
# - none: No reranking (uses original scores)
